{
    "title": "VIM style navigation",
    "rules": [
        {
            "description": "caps_lock + hjkl = VIM-style navigation",
            "manipulators": [
                // caps_lock + h = left arrow
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                },
                // caps_lock + j = down arrow
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "down_arrow"}]
                },
                // caps_lock + k = up arrow
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "up_arrow"}]
                },
                // caps_lock + l = right arrow
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_arrow"}]
                },
                // caps_lock + semicolon = delete
            	{
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "delete_or_backspace"}]
                },
                // caps_lock + quote = forward delete
            	{
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "delete_forward"}]
                },
                // caps_lock + e = escape
                {
                    "type": "basic",
                    "from": {
                        "key_code": "e",
                        "modifiers": {
                            "mandatory": ["right_control"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "escape"}]
                }
            ]
        }
    ]
}
